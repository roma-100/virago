{% macro service_item(image, title, text, link) %}
  <div class="service-card">
    <div class="service-card__image">
      <img src={{ image }} alt={{title}}>
    </div>
    <div class="service-card__category">
      {{ title }}
    </div>    
    <p>
     {{ text }}
    </p>
    <div class="service-card__btn">
      READ MORE
    </div>
  </div>

{% endmacro %}